mysqladmin -f -h localhost -uroot -pics421 create josephyltest2 2>/dev/null
mysqladmin -f -h localhost -uroot -pics421 create josephyltest3 2>/dev/null
mysqladmin -f -h localhost -uroot -pics421 create josephyltest4 2>/dev/null
